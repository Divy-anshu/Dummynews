<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    app:cardElevation="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/light"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_headline3"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:text="gyycchgvhv"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_date3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightColorPrimary"
            android:text="mnjkh"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/txt_author3"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:textColor="@color/lightColorPrimary"
            android:layout_height="wrap_content"
            android:text="iugyufy"
            android:padding="10dp"
            />
    </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/snow"
            />
        <TextView
            android:id="@+id/txt_description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:padding="8dp"
            android:text="dkljio h i787y yy7 huuh huusdgyyugydgyugy"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="4dp"
                android:id="@+id/btnRead"
                android:drawableLeft="@drawable/ic_open_in_browser_black_24dp"
                android:text="Read Full"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:layout_margin="4dp"
                android:textAlignment="textStart"
                android:drawableLeft="@drawable/ic_save_black_24dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/btnSave"
                android:text="Save"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/btnShare"
                android:layout_margin="4dp"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                android:text="Share"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>